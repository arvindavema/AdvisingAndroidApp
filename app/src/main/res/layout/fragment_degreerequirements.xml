<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/degreeFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignWithParentIfMissing="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="true"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:isScrollContainer="true"
    android:layoutDirection="inherit"
    android:layoutMode="opticalBounds"
    android:orientation="vertical"
    android:padding="8dp"
    android:textAlignment="viewStart"
    android:verticalScrollbarPosition="defaultPosition"
    app:layout_collapseMode="parallax"
    tools:actionBarNavMode="tabs"
    tools:context=".ui.DegreerequirementsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mathReqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/mathRequirements"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/csReqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mathReqs"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/csRequirements"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/upperLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/csReqs"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/upperLevel"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/LEP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upperLevel"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/LEP"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/degReqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LEP"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@string/degReqs"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="13dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/genTrackCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/design_default_color_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/GTText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="General Track Degree Requirements\n"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/primary"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/gtExpand"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Read More"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/gtInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/areas"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cyberCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/design_default_color_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/cyberText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cybersecurity Degree Requirements\n"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Cybersecurity Specialization allows students to have the necessary background to address myriad cybersecurity issues relevant to government, industry, and academic careers. Students interested in pursuing the cybersecurity specialization take the same foundational courses in computer science, but must complete a set of upper-level elective courses in order to ensure they receive in-depth education in topics such as network and distributed system security, operating systems security, and cryptography.\n\n"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/cyberExpand"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Read More"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/cyberInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cyberText"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/design_default_color_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/dsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Science Degree Requirements\n"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Science is an emerging field encapsulating interdisciplinary activities, used to create data-centric products, applications or programs that address specific scientific, socio-political, or business questions. It is making deep inroads in industry, government, health, and journalism. Due to the growing need for applying data science techniques in these and other domains, there is a significant shortage of trained data scientists. Data Science incorporates practices from a variety of fields in computer science, chiefly machine learning, statistics, databases, systems, algorithms, and visualization. The undergraduate data science specialization enables students to get the broad variety of skills needed to be successful data scientists.\n\n"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/dsExpand"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Read More"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/dsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dsText"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/qiCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/design_default_color_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/qiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantum Information Degree Requirements\n"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/qiExpand"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Read More"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/qiInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qiText"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mlCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:cardBackgroundColor="@color/design_default_color_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/mlText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Machine Learning Degree Requirements\n"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/primary"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/mlExpand"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Read More"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/mlInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mlText"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>