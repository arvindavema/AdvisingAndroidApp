<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.OverviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ugradOverviewTitleTextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@color/primary"
                android:textSize="48sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewUgradStudiesHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Undergraduate Studies in Computer Science at the University of Maryland"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/textViewUgradStudiesSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ugradStudiesSummary"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewUgradAdvsingTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ugradAdvsingTeamTextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="@color/primary"
                android:textSize="24sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewUgradAdvsingTeamSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ugradAdvsingTeamSummaryTextView"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
